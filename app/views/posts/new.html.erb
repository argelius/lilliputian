<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>Add blog post</h1>
        <%= form_for @post do |f| %>
            <% messages = @post.errors.messages %>
            <div class="form-group <% if messages.has_key? :title %>has-error<% end %>">
                <%= f.label :title %>
                <%= f.text_field :title, :class => "form-control" %>
                <% if messages.has_key? :title %>
                    <span class="help-block">
                        <ul class="list-unstyled">
                            <% messages[:title].each do |m| %>
                                <li>Title <%= m %></li>
                            <% end %>
                        </ul>
                    </span>
                <% end %>
            </div>
            <div class="form-group <% if messages.has_key? :content %>has-error<% end %>">
                <%= f.label :content %>
                <%= f.text_area :content, :rows => 15, :class => "form-control" %>
                <% if messages.has_key? :content %>
                    <span class="help-block">
                        <ul class="list-unstyled">
                            <% messages[:content].each do |m| %>
                                <li>Content <%= m %></li>
                            <% end %>
                        </ul>
                    </span>
                <% end %>
            </div>
            <%= f.submit("Publish", :class => "btn btn-default") %>
        <% end %>
    </div>
</div>
