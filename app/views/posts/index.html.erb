<% @posts.each do |p| %>
    <div class="row">
        <div class="col-md-2">
            <span class="pull-right">
                <%= p.created_at.strftime("%e %b, %Y") %>
            </span>
        </div>
        <div class="col-md-6">
            <strong><%= link_to p.title, p %></strong> 
            <p class="text-muted"><%= strip_tags(render_markdown(p.content)).html_safe %></p>
        </div>
    </div>
<% end %>

<div class="row">
    <div class="col-md-6 col-md-offset-2">
        <%= will_paginate(@posts, :page_links => false) %>
    </div>
</div>
